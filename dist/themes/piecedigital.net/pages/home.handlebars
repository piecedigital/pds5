<script>
    String.prototype.stripSearch = function() {
        return this.replace("#", "").replace(/\?.*/, "")
    };
    var formatQueryies = function() {
        var queryObj = {};
        var searchArr = location.hash.replace(/\#[\w\-]*/, "").match(/([a-zA-z0-9][\-\_]?)*[=]([a-zA-z0-9][\-\_]?)*/gi) || [];
        searchArr.map(function(elem, ind) {
            elem = elem.split("=");
            queryObj[elem[0]] = elem[1];
        });
        return queryObj;
    };
    var formatLink = function(str) {
        if(!str.match(/\[.*\]\(.*\)/)) return str;
        var linkObj = {
            text: str.match(/^\[(.*)\]/).pop(),
            link: str.match(/\((.*)\)$/).pop()
        };

        return $("<a>")
            .attr("href", linkObj.link)
            .attr("target", "_blank")
            .text(linkObj.text);
    };
    // projects and their slides
    $(document).ready(function() {
        if(location.hash) $("#content-body").attr("class", location.hash.stripSearch() );
    });
</script>
