                            .html(
                                $("<img>")
                                    .attr("src", "/public/media/images/small_"+projects[projIndex].refName.replace(/[\s\-]/g, "_")+"_previews/"+(i+1)+".png")
                            )
                    )
                }

                $(".full-project-gallery")
                    .html( $(galleryView).append( $(galleryList) ) )
                    .parent().parent().removeClass("hidden").next(".section").addClass("white-bg");
            } else {
                $(".full-project-gallery")
                    .parent().parent().addClass("hidden").next(".section").removeClass("white-bg");
            };

            $(".full-project-links").html("");
            projects[projIndex].relatedLinks.map(function(elem) {
                $(".full-project-links").append(
                    $("<div>")
                    .addClass("col-3-2-1 center-justify x-pad-1_0 y-pad-1_0")
                    .html(
                        $( formatLink(elem) )
                            .attr("target", "_blank")
                            .attr("rel", "nofollow")
                            .addClass("btn-normal")
                    )
                );
            });
        };

        var queries = formatQueryies();
        if(queries.project) {
            var projectNum = parseProjectIndex(queries.project)
            populateFullProject( projectNum );
            goToPage("full-project");
        }

        $(document).on("click", ".to-project", function(e) {
            e.stopPropagation();
            var index = parseProjectIndex($(this).data("index"));
            goToPage("full-project");
            populateFullProject( parseInt( index ) );
        });
    });
</script>