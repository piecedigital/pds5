                        if(ind === 2) {
                            var textareaLength = $(self).find("textarea").val().length;
                            $(".err-msg").append( $("<div>").text("Insufficient message contents. "+(30-textareaLength)+" more characters required.") );
                        }
                    }
                });
            }
        });

