        $(".go-to-page").on("click", goToPage);

        $("#contact-form").on("submit", function(e) {
            var self = this;
            $(".err-msg").html("");

            var clearArray = [],
                toBeCorrect = 3;

            String.prototype.replaceEndSpaces = function() {
                return this.replace(/^\s*/, "").replace(/\s*$/, "");
            };

            clearArray.push((
                !!$(this).find("input[name='name']").val() &&
                $(this).find("input[name='name']").val().replaceEndSpaces().length >= 2
            ));
            clearArray.push((
                !!$(this).find("input[name='email']").val() &&
                $(this).find("input[name='email']").val().length >= 5 &&
                $(this).find("input[name='email']").val().match(/([\w\d\-\_\.]{1,})@([\w\d]{1,})(\.[\w\d]{1,})(\.[\w\d]{1,})?/i)
            ));
            clearArray.push((
                !!$(this).find("textarea").val() &&
                $(this).find("textarea").val().length >= 30
            ));

            if(clearArray.indexOf(false) >= 0) {
                e.stopPropagation();
                clearArray.map(function(elem, ind) {
                    if(elem === false) {
                        if(ind === 0) {
                            $(".err-msg").append( $("<div>").text("Insufficient name. Minimum of 2 characters required.") );
                        }
                        if(ind === 1) {
                            $(".err-msg").append( $("<div>").text("Invalid email. Verify correct formatting (Ex. Jane.Doe@email.com).") );
